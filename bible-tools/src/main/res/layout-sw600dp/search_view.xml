<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:gravity="center"
    android:padding="@dimen/margin_tiny">

    <android.support.v7.widget.CardView
        style="@style/AppTheme.CardView"
        android:layout_width="500dp"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/margin_small">

            <ImageView
                android:id="@+id/drawerToggle"
                style="@style/selectableItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="@string/blank"
                android:scaleType="centerInside"
                android:src="@drawable/ic_menu_grey" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <rawcomposition.bibletools.info.custom.ClearAutoCompleteTextView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:dropDownWidth="200dp"
                android:hint="@string/search_hint"
                android:imeOptions="actionSearch"
                android:inputType="textAutoComplete|textAutoCorrect|textCapSentences"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="@dimen/text_medium"
                app:fontStyle="@string/font_medium" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <requestFocus />
</FrameLayout>


