<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" />

    <style name="BaseTheme" />

    <style name="BaseTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/theme_primary</item>

        <item name="android:textColor">@color/primary_material_dark</item>
        <item name="android:textColorLink">@color/link_color</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <item name="android:divider">@color/dividers</item>

        <item name="popupMenuStyle">@style/Widget.AppTheme.PopupMenu</item>
        <item name="listPopupWindowStyle">@style/Widget.AppTheme.PopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu</item>
        <item name="searchViewStyle">@style/Widget.AppTheme.SearchView</item>
        <item name="actionBarIconColor">@android:color/white</item>

        <item name="selectableItemBackground">@drawable/selectable_item_background</item>

        <item name="md_positive_color">@color/theme_primary</item>
        <item name="md_neutral_color">@color/theme_primary</item>
        <item name="md_negative_color">@color/theme_primary</item>
        <item name="md_dark_theme">false</item>
        <item name="md_item_color">@color/primary_material_dark</item>

        <item name="spbStyle">@style/ProgressBar.Light</item>
    </style>

    <style name="BaseTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/theme_primary</item>

        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorLink">@color/link_color</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <item name="android:divider">@color/dividers</item>

        <item name="popupMenuStyle">@style/Widget.AppTheme.PopupMenu</item>
        <item name="listPopupWindowStyle">@style/Widget.AppTheme.PopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.LargePopupMenu</item>
        <item name="searchViewStyle">@style/Widget.AppTheme.SearchView</item>
        <item name="actionBarIconColor">@android:color/white</item>

        <item name="selectableItemBackground">@drawable/selectable_item_background</item>

        <item name="md_positive_color">@android:color/white</item>
        <item name="md_neutral_color">@android:color/white</item>
        <item name="md_negative_color">@android:color/white</item>
        <item name="md_item_color">@android:color/white</item>
        <item name="md_dark_theme">true</item>

        <item name="spbStyle">@style/ProgressBar.Dark</item>
    </style>


    <style name="Theme.Light" parent="BaseTheme.Light" />

    <style name="Theme.Dark" parent="BaseTheme.Dark" />

    <style name="Theme.Light.Settings">
        <item name="colorAccent">@color/theme_primary</item>
    </style>

    <style name="Theme.Dark.Settings">
        <item name="colorAccent">@color/theme_primary</item>
    </style>

    <style name="ProgressBar.Light">
        <item name="spb_colors">@array/progress_colors</item>
    </style>

    <style name="ProgressBar.Dark">
        <item name="spb_colors">@array/progress_colors_dark</item>
    </style>


</resources>