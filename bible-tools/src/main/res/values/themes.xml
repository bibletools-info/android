<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme" />

    <style name="BaseTheme" />

    <style name="BaseTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/window_background</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/secondary</item>

        <item name="android:textColorLink">@color/link_color</item>
        <item name="android:divider">@color/divider</item>

        <item name="cardStyle">@style/Widget.CardView</item>
        <item name="alertDialogTheme">@style/Widget.AlertDialog</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="BaseTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/secondary</item>

        <item name="android:textColorLink">@color/link_color</item>
        <item name="android:divider">@color/divider</item>

        <item name="cardStyle">@style/Widget.CardView</item>
        <item name="alertDialogTheme">@style/Widget.AlertDialog</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Theme.BibleTools" parent="BaseTheme.Light" />

    <style name="Theme.BibleTools.Launcher">
        <item name="android:windowBackground">@drawable/launcher_back</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>