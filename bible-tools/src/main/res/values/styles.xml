<resources>

    <style name="AppTheme" />

    <style name="AppTheme.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
    </style>

    <style name="referenceTitle" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">@font/lato_medium</item>
    </style>

    <style name="referenceTitle.verse">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="referenceText" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:maxLines">4</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_micro</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>


    <style name="verseNavigation">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/margin_tiny</item>
        <item name="android:contentDescription">@string/blank</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="Widget" />

    <style name="Widget.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_primary</item>
    </style>

    <style name="Widget.CardView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardElevation">@dimen/margin_small</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="Widget.SearchView">
        <item name="floatingSearch_backgroundColor">@color/card_background</item>
        <item name="floatingSearch_viewSuggestionItemTextColor">@color/text</item>
        <item name="floatingSearch_hintTextColor">@color/secondary</item>
        <item name="floatingSearch_dividerColor">@color/divider</item>
        <item name="floatingSearch_clearBtnColor">@color/icons</item>
        <item name="floatingSearch_menuItemIconColor">@color/icons</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
</resources>
