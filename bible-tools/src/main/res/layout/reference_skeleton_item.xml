<?xml version="1.0" encoding="utf-8"?>

<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?attr/cardStyle"
    android:layout_marginBottom="@dimen/spacing_normal"
    android:layout_marginTop="@dimen/spacing_normal"
    app:cardElevation="1dp"
    app:contentPaddingBottom="@dimen/spacing_normal"
    app:contentPaddingLeft="@dimen/spacing_medium"
    app:contentPaddingRight="@dimen/spacing_medium"
    app:contentPaddingTop="@dimen/spacing_normal">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_normal"
                android:paddingTop="@dimen/spacing_normal">

                <View
                    android:id="@+id/circle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/skeleton_circle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/top"
                        android:layout_width="80dp"
                        android:layout_height="6dp"
                        android:background="@drawable/skeleton_bar" />

                    <View
                        android:layout_width="120dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="@dimen/spacing_micro"
                        android:background="@drawable/skeleton_bar" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:background="@color/divider" />

            <View
                android:layout_width="260dp"
                android:layout_height="12dp"
                android:layout_marginBottom="@dimen/spacing_micro"
                android:layout_marginTop="@dimen/spacing_micro"
                android:background="@drawable/skeleton_bar" />

            <View
                android:layout_width="270dp"
                android:layout_height="10dp"
                android:layout_marginBottom="@dimen/spacing_micro"
                android:layout_marginTop="@dimen/spacing_micro"
                android:background="@drawable/skeleton_bar" />

            <View
                android:layout_width="200dp"
                android:layout_height="10dp"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_micro"
                android:background="@drawable/skeleton_bar" />


        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

</android.support.design.card.MaterialCardView>