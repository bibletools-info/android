<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>

        <item name="android:textColor">@color/text</item>
        <item name="android:textColorLink">@color/theme_primary_dark</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <item name="android:divider">@color/dividers</item>
    </style>

    <style name="AppTheme.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardElevation">@dimen/margin_tiny</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fontStyle">@string/font_regular</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:paddingRight">@dimen/margin_medium</item>
    </style>

    <style name="referenceTitle" parent="AppTheme.TextView">
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:background">@color/reference_title_background</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="referenceText" parent="AppTheme.TextView">
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

</resources>
